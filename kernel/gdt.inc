
gdt:
	; null descriptor
	dd 0
	dd 0

	; kernel code descriptor
	dw 0xFFFF, 0x0000
	db 0x00, 0x9a, 0xCF, 0x00

	; kernel data descriptor
	dw 0xFFFF, 0x0000
	db 0x00, 0x92, 0xCF, 0x00

	; user code descriptor
	dw 0xFFFF, 0x0000
	db 0x00, 0xFA, 0xCF, 0x00

	; user data descriptor
	dw 0xFFFF, 0x0000
	db 0x00, 0xF2, 0xCF, 0x00

